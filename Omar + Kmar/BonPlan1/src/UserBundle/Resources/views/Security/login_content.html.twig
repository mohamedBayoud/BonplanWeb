{% extends('BonPlanBundle:Default:index.html.twig') %}
{% trans_default_domain 'FOSUserBundle' %}
{% block formulaire %}
{% block login %}
        {% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
    <div class="lightbox" style="display:block;">
        <div class="lb-wrap">
            <a href="#" class="close">x</a>
            <div class="lb-content">
                <form class="row" action="{{ path("fos_user_security_check") }}" method="post">
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {% endif %}
                    <h3>Log in</h3>
                    <div class="f-item full-width">
                        <label for="username">{{ 'security.login.username'|trans }}</label>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
                    </div>
                    <div class="f-item full-width">
                        <label  for="password">{{ 'security.login.password'|trans }}</label>
                        <input type="password" id="password" name="_password" required="required" autocomplete="current-password" />
                    </div>
                    <div class="f-item checkbox full-width">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                    </div>
                    <div class="f-item full-width">
                        <p><a href="#" title="Forgot password?">Forgot password?</a><br />
                            Dont have an account yet? <a href="{{ path('Register') }}" title="Sign up">Sign up.</a></p>
                        <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
{% endblock %}
